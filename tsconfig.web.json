{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/types.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@settings/*": ["src/settings/src/*"],
      "@/*": ["src/*"]
    }
  }
}
